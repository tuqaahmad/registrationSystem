<html lang="en">
<%- include('./partials/header.ejs')  %>
<%- include('./partials/welcomeNav.ejs')  %>

<body>
  <div class="create-blog content">
   <form action="/signup" method="POST">
    <br><br>
    <h2>Sign up</h2>
    <p>Please fill in this form to create an account.</p>
    <label for="userid">User ID:</label>
    <input type="text" placeholder="Enter your ID" id="userid" name="userid" required>

    <label for="username">Username:</label>
    <input type="text" placeholder="Enter Username" id="username" name="username" required>

    <label for="gender">Gender:</label>
    <select name="gender" id="gender" style="width: 400px; height: 35px; font-size: 15px; margin-top: 10px;">
      <option>Select</option>
      <option value="female">Female</option>
      <option value="male">Male</option>
    </select>

    <label for="dob">Date of birth:</label>
    <input type="date" placeholder="Enter your date of birth" id="dob" name="dob" required>

    <label for="specialization">specialization:</label>
    <input type="text" placeholder="Enter specialization" id="specialization" name="specialization" required>

    <label for="number">Number:</label>
    <input type="text" placeholder="Enter number" id="number" name="number" required>

     <label for="useremail">Email:</label>
     <input type="email" placeholder="Enter email" id="useremail" name="useremail" required>

     <label for="userpassword">Password:</label>
     <input type="password" placeholder="Enter password" id="userpassword" name="userpassword" required>

     <label for="userpassword2">Repeat password:</label>
     <input type="password" placeholder="Repeat password" id="userpassword2" name="userpassword2" required>

     <label for="type">Type:</label>
    <select name="type" id="type" style="width: 400px; height: 35px; font-size: 15px; margin-top: 10px;">
      <option>Select</option>
      <option value="doctor">Doctor</option>
      <option value="student">Student</option>
    </select>

     <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

     <button type="submit"> Sign up </button>
     <button type="button" class="cancelbtn">Cancel</button>


   </form>
 </div>

<%- include('./partials/footer.ejs')  %>
</body>
</html>